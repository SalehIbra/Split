<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout_dialog_add_contact"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_dialog_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout_dialog_info"
            android:padding="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView_logo_info"
                android:layout_width="147dp"
                android:layout_height="144dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="25dp"
                app:srcCompat="@drawable/logo_transparent" />

            <TextView
                android:id="@+id/textView_dialog_info"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textSize="17sp"
                android:text="@string/dialog_info_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView_logo_info"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/button_dialog_info_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_dialog_info"
                android:layout_marginTop="40dp"
                android:background="@color/colorPrimaryDark"
                android:text="@string/dialog_exit_button"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="180dp" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>

